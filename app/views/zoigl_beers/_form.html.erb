<%= form_for @zoigl_beer, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :beername, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :beername, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rbid, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :rbid, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rbbrewer, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.number_field :rbbrewer, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :alcohol, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :alcohol, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  zoigl_beers_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
